# Frontend Environment Variables
# Copy this file to .env and fill in your actual values

# Stripe Publishable Key (starts with pk_live_ or pk_test_)
# Get this from: https://dashboard.stripe.com/apikeys
VITE_STRIPE_PUBLISHABLE_KEY=pk_live_your_publishable_key_here

# Backend API URL
# For production with cPanel backend at /backend path
VITE_API_URL=https://ygiholidayhomes.com/backend

# Alternative: If using subdomain for backend
# VITE_API_URL=https://api.ygiholidayhomes.com

# Alternative: If using external hosting (Render, Railway, etc)
# VITE_API_URL=https://your-backend.onrender.com
